{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./assembly",
    "types": ["node"]
  },
  "include": ["assembly/**/*", "*.js"],
  "exclude": ["node_modules", "build"]
}
